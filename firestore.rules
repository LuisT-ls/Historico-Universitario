rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if a user profile is public
    function isPublic(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.settings.privacy == 'public';
    }

    // Helper para validar campos de string
    function isValidString(val, min, max) {
      return val is string && val.size() >= min && val.size() <= max;
    }

    // Regras para a coleção 'users'
    match /users/{userId} {
      allow read: if (request.auth != null && request.auth.uid == userId) || 
                     (resource.data.settings.privacy == 'public');
      allow write: if request.auth != null && request.auth.uid == userId
                    && isValidString(request.resource.data.name, 1, 100);
    }
    
    // Regras para a coleção 'disciplines'
    match /disciplines/{disciplineId} {
      allow read: if (request.auth != null && request.auth.uid == resource.data.userId) || 
                     isPublic(resource.data.userId);
      allow write: if request.auth != null && request.auth.uid == resource.data.userId
                    && isValidString(request.resource.data.nome, 1, 200)
                    && request.resource.data.ch is number
                    && request.resource.data.ch >= 0;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId
                    && isValidString(request.resource.data.nome, 1, 200);
    }
    
    // Regras para a coleção 'certificados'
    match /certificados/{certificadoId} {
      allow read: if (request.auth != null && request.auth.uid == resource.data.userId) || 
                     isPublic(resource.data.userId);
      allow write: if request.auth != null && request.auth.uid == resource.data.userId
                    && isValidString(request.resource.data.titulo, 1, 300)
                    && request.resource.data.cargaHoraria is number;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId
                    && isValidString(request.resource.data.titulo, 1, 300);
    }
    
    // Regras simplificadas para outras coleções do usuário (sempre privadas)
    match /summaries/{id} { allow read, write: if request.auth != null && request.auth.uid == (resource == null ? request.resource.data.userId : resource.data.userId); }
    match /backups/{id} { allow read, write: if request.auth != null && request.auth.uid == (resource == null ? request.resource.data.userId : resource.data.userId); }
    match /academicHistory/{uid} { allow read, write: if request.auth != null && request.auth.uid == uid; }
    match /graduationRequirements/{uid} { allow read, write: if request.auth != null && request.auth.uid == uid; }

    // Negar acesso a todas as outras coleções por padrão
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 